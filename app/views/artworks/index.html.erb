<% if current_editor || current_admin %>

<h1>Art Submissions</h1>

<table class="table table-striped">
    <thead>
      <th>#</th>
      <th>Title</th>
      <th>Thumbnail</th>
      <th>Author</th>
      <th>School</th>
      <th># of Ratings</th>
      <th>Average Rating</th>
    </thead>
    <tbody>
    <% i = 0 %>
    <% @submitters.each do |submitter| %>
      <% submitter.artworks.each do |art| %>
        <% if art.already_rated(current_user) %>
          <tr id="already-read">
        <% else %>
          <tr>
        <% end %>
            <td><%= i += 1 %></td>
            <td><%= link_to art.title, artwork_path(art.id)  %></td>
            <td><%= image_tag art.image.url(:thumb) %></td>
            <td><%= submitter.first_name + ' ' + submitter.last_name %></td>
            <td><%= submitter.school %></td>
            <td><%= art.ratings_count %></td>
            <td><%= art.average_rating ? art.average_rating.round(2) : "n/a" %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
  </table>
  <% end %>