<% if current_submitter %>
	<div class="jumbotron">
	  <h1 class="center"><%= @artwork.title %></h1>
	  <p class="center">If you cannot see your artwork here, unfortunately we won't be able to see it either!</p>
	</div>
	<div class='center bottom-margin'>
	  <%= link_to 'Edit Title', edit_artwork_path(@artwork), class: 'btn btn-primary form-button' %>
	  <%= link_to 'Done', submissions_show_path, class: 'btn btn-success form-button' %>
	  <%= link_to 'Remove Submission', @artwork, method: :delete, class: 'btn btn-danger' %>
	</div>
	<div><%= image_tag @artwork.image.url(:medium), class: 'centered-img' %></div>
<% end %>

<% if current_editor || current_admin %>
	<div class="jumbotron">
	  <h1 class="center"><%= @artwork.title %></h1>
	</div>
	<% if @rating.errors.any? %>
		    <div id="error_explanation" class="alert alert-danger">
		      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this submission from being saved:</h2>

		      <ul>
		      <% @rating.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% elsif @comment.errors.any? %>
		    <div id="error_explanation" class="alert alert-danger">
		      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this submission from being saved:</h2>

		      <ul>
		      <% @comment.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
	<span><%= image_tag @artwork.image.url(:medium), class: 'left-img' %></span>
	<span class="editor-tools">
    <%if current_admin then %>
      <div id="approved-button" class="admin-actions center">
        <% button_action = @artwork.accepted ? "Reject" : "Accept" %>
        <% button_classes = @artwork.accepted ? "btn btn-danger" : "btn btn-success" %>
        <%= link_to button_action, toggle_approved_artwork_path(@artwork), remote: true, method: :post, class: button_classes, id: "accept-button" %>
      </div>
      <div class="admin-actions center">
        <%= link_to 'Edit Submission Info', edit_artwork_path(@artwork), class: 'btn btn-primary'%>
      </div>
    <% end %>

		<%= form_for ([@artwork, @rating]) do |f| %>
	
			<div class="form-group">
				<%= f.label :rating, "Your rating:" %><br />
			    <%= f.select :rating_val, Artwork::RATINGS, {prompt: "Rate this piece"}, class: "form-control", id: "rating-select" %>
			 </div>
			 <div class="actions center">
    			<%= f.submit "Save Rating", class: "btn btn-success" %>
  			</div>
  		<% end %>
  		<br />
  		
  		<%= form_for ([@artwork, @comment]) do |f| %>
	
			<div class="form-group">
				<%= f.label :comment, "Comment:" %><br />
			    <%= f.text_area :comment_text, cols: 100, rows: 8, class: "form-control" %>
			 </div>
			 <div class="actions center">
    			<%= f.submit "Add Comment", class: "btn btn-info" %>
  			</div>

  		<% end %>
  		<br />
  		<% for comment in @artwork.comments.order("created_at desc") %>
  			<% commenter = User.find(comment.user_id) %>
  			<p><b><%= commenter.first_name %> <%= commenter.last_name %>: </b> <%= comment.comment_text %></p>
  			<br />
  		<% end %>
	</span>
<% end %>
