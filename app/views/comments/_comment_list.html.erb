<% for comment in submission.comments.order("created_at asc") %>
  <% commenter = User.find(comment.user_id) %>
  <div class="tight-comment col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= commenter.first_name %> <%= commenter.last_name %></strong> <span class="text-muted"><%= comment.created_at.strftime("%m-%d-%y %l:%M %p") %></span>
  </div>
  <div class="panel-body">
    <% if comment.title_suggestion %>
    Title Suggestion:
    <% end %>
    <%= comment.comment_text %>
      <br>
      <% if commenter == current_user %>
        <%= link_to 'Delete', comment, method: :delete, remote: :true %>
      <% end %>
  </div><!-- /panel-body -->
  </div><!-- /panel panel-default -->
  </div><!-- /col-sm-5 -->
