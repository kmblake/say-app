<div class="jumbotron">
  <h1><%=  @user.name %></h1>
  <p><%= @user.role + if (@user.role == 'Editor' && !@user.approved) then ' (UNAPPROVED)' else '' end %></p>
</div>
<ul class="list-group">
  <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
  <% if @user.role == 'Submitter' %>
    <li class="list-group-item"><strong>School:</strong> <%= @user.school %></li>
    <li class="list-group-item"><strong>Teacher:</strong> <%= @user.teacher %></li>
    <li class="list-group-item"><strong>Bio:</strong> <%= @user.bio %></li>
    <% if current_admin %>
      <li class="list-group-item center"><%= link_to 'Edit ' + @user.role, edit_user_path(@user), class: "btn btn-info top-margin" %></li>
    <% end %>
  <% end %>
</ul>




<% if @user.role == 'Submitter' %>

  <h2>Written Submissions</h2>
  <% if @user.documents.any? %>
    <table class="table table-striped">
      <thead>
        <th>#</th>
        <th>Title</th>
        <th>Style</th>
        <th>Submitted On</th>
        <th>Status</th>
      </thead>
      <tbody>
        <% @user.documents.each_with_index do |doc, i| %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= link_to doc.title, document_path(doc.id)  %></td>
            <td><%= doc.style %></td>
            <td><%= doc.created_at.strftime("%m/%d/%Y at %I:%M %p") %></td>
            <td><%= doc.status %></td>
          </tr>
        <% end %>
    </table>
  <% end %>
  <%= link_to 'Upload Written Submission', new_document_path(user_id: @user.id), class: 'btn btn-lg btn-success' %><br>

  <h2>Art Submissions</h2>
  <% if @user.artworks.any? %>
    
    <table class="table table-striped">
      <thead>
        <th>#</th>
        <th>Title</th>
        <th>Thumbnail</th>
        <th>Submitted On:</th>
      </thead>
      <tbody>
        <% @user.artworks.each_with_index do |art, i| %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= link_to art.title, artwork_path(art.id)  %></td>
            <td><%= image_tag art.image.url(:thumb) %></td>
            <td><%= art.created_at.strftime("%m/%d/%Y at %I:%M %p") %></td>
          </tr>
        <% end %>
    </table>
  <% end %>
  <%= link_to 'Upload Artwork', new_artwork_path(user_id: @user.id), class: 'btn btn-lg btn-primary' %>
<% else %>
  <h2>History</h2>
    <p>Nothing here yet.<p>
   <!-- show past ratings and comments here -->
<% end %>
