<div class="jumbotron">
  <h1>My Submissions</h1>
</div>
  <% button_classes = if @user.documents.any? then 'btn btn-lg btn-success' else 'btn btn-lg btn-success bottom-margin' end %>
  <%= link_to 'Upload Written Submission', new_document_path, class: button_classes %><br>
  
<% if @user.documents.any? %>
  <h2>Written Submissions</h2>
  <table class="table table-striped">
    <thead>
      <th>#</th>
      <th>Title</th>
      <th>Style</th>
      <th>Submitted On:</th>
      <th></th>
    </thead>
    <tbody>
      <% @user.documents.each_with_index do |doc, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= link_to doc.title, document_path(doc.id)  %></td>
          <td><%= doc.style %></td>
          <td><%= doc.created_at.strftime("%m/%d/%Y at %I:%M %p") %></td>
          <td><%= link_to 'Remove', doc, method: :delete %>
        </tr>
      <% end %>
  </table>
<% end %>

<%= link_to 'Upload Artwork', new_artwork_path, class: 'btn btn-lg btn-primary' %>
<% if @user.artworks.any? %>
  <h2>Art Submissions</h2>
  <table class="table table-striped">
    <thead>
      <th>#</th>
      <th>Title</th>
      <th>Thumbnail</th>
      <th>Submitted On:</th>
      <th></th>
    </thead>
    <tbody>
      <% @user.artworks.each_with_index do |art, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= link_to art.title, artwork_path(art.id)  %></td>
          <td><%= image_tag art.image.url(:thumb) %></td>
          <td><%= art.created_at.strftime("%m/%d/%Y at %I:%M %p") %></td>
          <td><%= link_to 'Remove', art, method: :delete %>
        </tr>
      <% end %>
  </table>
<% end %>

