<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading center">Please Sign In</h2>
  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="forgot-pw">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-pw" %><br />
    <% end -%>
  </div>

  <div class="actions">
    <%= f.submit "Log In", class: "btn btn-lg btn-primary btn-block" %>
    <%= link_to "Sign Up", new_submitter_registration_path, class: "btn btn-lg btn-success btn-block" %><br />
     <%= link_to "Editor Sign Up", new_editor_registration_path, class: "btn btn-lg btn-warning btn-block" %><br />
  </div>
<% end %>
